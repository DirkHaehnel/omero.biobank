<?xml version="1.0" encoding="UTF-8"?>

<types>
  <!-- DataCollection is a container used to aggregate DataSample objects -->
  <type id="ome.model.vl.DataCollection">
    <properties>
      <required name="vid" type="string" unique="true"/>
      <required name="label" type="string" unique="true"/>
      <required name="creationDate" type="timestamp"/>
      <required name="study" type="ome.model.vl.Study"/>
      <optional name="description" type="text"/>
    </properties>
  </type>
</types>
